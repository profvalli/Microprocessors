PROGRAM FOR PERFORMING BUBBLE SORT-DESCENDING ORDER

       MOV CX,N
       DEC CX      ;TO N-1
LOOP1: MOV DI,CX
       MOV BX,0
LOOP2:MOV AX, A[BX]
      CMP AX, A[BX+2]
      JGE CONTINUE
      XCHG AX, A[BX+2]
      MOV A[BX],AX
CONTINUE: ADD BX,2
      LOOP LOOP2
      MOV CX,DI
      LOOP LOOP1
      HLT
    
